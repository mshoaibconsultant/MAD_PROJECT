<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:background="#009C27B0"
        android:text="Profile Info"
        android:textColor="#E92031"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-268dp"
        android:layout_marginTop="40dp"
        android:background="#FF5722" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-410dp"
        android:layout_marginTop="80dp"
        android:text="How would you like to be addressed?"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="130dp"
        android:text="TITLE"
        android:textSize="20dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="160dp"
        android:text="Mr.   Mrs.   Ms.   other"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="200dp"
        android:text="FIRST NAME"
        android:textSize="15dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="-400dp"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Muhammad"/>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="280dp"
        android:text="LAST NAME"
        android:textSize="15dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="-400dp"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Shoaib"/>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="360dp"
        android:text="GENDER"
        android:textSize="15dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="-400dp"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Male"/>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="440dp"
        android:text="COUNTRY"
        android:textSize="15dp"
        android:textColor="#cc0071 "
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="-400dp"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:text="Pakistan"/>


    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="520dp"
        android:text="I consent, to the processingof my personal data in accordance with the Vistajet Privacy Policy, and to the Vistajet Direct Program Terms and Conditions of Use"
        android:checked="true"
        android:textSize="12dp"
        android:textStyle="normal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-412dp"
        android:layout_marginTop="590dp"
        android:text="Next"
        android:textSize="12dp"
        android:background="@android:color/holo_red_light"
        android:textStyle="normal" />

</android.widget.LinearLayout>